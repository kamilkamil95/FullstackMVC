@model IEnumerable<MapModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Map List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Map" asp-action="Create" class="btn btn-primary"> Create Map</a>
        </div>

    </div>
    <br /><br />


    @if (Model.Count() > 0)
    {
        <table class=" = table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                 
                    <th>
                        Map
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="70%">@item.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Map" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">  <i class="fas fa-edit"></i>   </a>
                            <a asp-controller="Map" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">  <i class="fas fa-trash"></i>  </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exist</p>
    }

</div>