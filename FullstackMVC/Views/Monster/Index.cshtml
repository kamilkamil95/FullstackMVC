@model IEnumerable<MonsterModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Monster  List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"> Create new Monster</a>
        </div>

    </div>
    <br /><br />


    @if (Model.Count() > 0)
    {
        <table class=" = table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Monster Id
                    </th>
                    <th>
                        Monster Name
                    </th>
                    <th>
                        HP
                    </th>
                    <th>
                        Min Attack
                    </th>
                    <th>
                        Max Attack
                    </th>
                    <th>
                       Location
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">@item.Id</td>
                        <td width="20%">@item.Name</td>
                        <td width="20%">@item.Hp</td>
                        <td width="20%">@item.DmgMin</td>
                        <td width="20%">@item.DmgMax</td>
                        <td width="20%">@item.MapModel.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary mx-2">  <i class="fas fa-edit"></i>   </a>
                                <a  asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">  <i class="fas fa-trash"></i>  </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Monster exist</p>
    }

</div>