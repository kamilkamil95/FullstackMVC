@model MonsterModel
    <div class="col-lg-4 col-md-6 pb-4 filter @Model.MapModel.Name.Replace(' ','_')">
        <!-- Card-->
        <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left text-dark h5">@Model.Name</label></div>
                <div class="col-5"><label class="float-right"><span class="text-danger h5">HP: @Model.Hp</span></label> </div>
            </div>
          
                <img class="card-img-top img-fluid d-block mx-auto mb-3" style="width:200px; height:250px" src="@Consts.ImagePath@Model.Image" alt="Card image cap">          
            <div class="card-body p-1 px-3 row">
                <div class="col-6">
                    <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.MonsterTypeModel.Name</span>
                </div>
                <div class="col-6 border-0">
                    <span class="badge p-2 border w-100" style="background-color:aliceblue">@Model.MapModel.Name</span>
                </div>

              

                <div class="col-12 p-1">
                    <a asp-action="Attack" asp-route-id="@Model.Id" class="btn btn-info form-control btn-sm p-2" style="height:40px">Attack</a>
                </div>
           
            </div>
        </div>
    </div>
